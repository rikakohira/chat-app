<div class="main-header">
  <div class="header-title">hogefuga</div>
  <div class="header-button">
    <a href="#">チャットを終了する</a>  
  </div>
</div>

<div class="main-messages">
  <div class="message">
   <div class="upper-message">
     <div class="message-user">Tom</div>
     <div class="message-date">2022/04/01(水)12:00</div>
   </div>
   <div class="lower-message">おはよう</div>
  </div>
</div>

<%= form_with model: [@room, @message], class: 'main-form', local: true do |f| %>
  <div class="form-input">
    <%= f.text_field :content, class: 'form-message', placeholder: 'type a message' %>
      <label class="form-image">
        <span class="image-file">画像</span>
        <%= f.file_field :image, class: 'hidden' %>
      </label>
  </div>
  <%= f.submit '送信', class: 'form-submit' %>
<% end %>